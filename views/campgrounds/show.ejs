<!-- show individual camp title and camp location -->
<% layout('layouts/boilerplate') %>
<!-- Styling for the stars used in review -->
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="row">
  <!-- left column: Camp Image, title, description, price, edit and delete button-->
  <div class="col-6">
    <!-- Image Carousel -->
    <div id="campgroundCarousel" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% campground.images.forEach((img, i) => { %>
        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
          <img src="<%= img.url  %> " class="d-block w-100" alt="" />
        </div>
        <% }) %>
      </div>
      <% if(campground.images.length > 1) { %>
      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#campgroundCarousel"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#campgroundCarousel"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
      <% } %>
    </div>
    <!-- End of Image Carousel -->
    <!-- Campground Details -->
    <div class="card mb-3">
      <!-- Campground Title and Description -->
      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%= campground.description%></p>
      </div>
      <!-- End of Campground Title and Description -->
      <!-- Campground Location, Price and Submitter -->
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location%></li>
        <li class="list-group-item">
          Submitted By: <%= campground.author.username%>
        </li>
        <li class="list-group-item">$<%= campground.price%>/night</li>
      </ul>
      <!-- End of Campground Location, Price and Submitter -->
      <!-- Edit adn Delete Button -->
      <% if(currentUser && campground.author.equals(currentUser._id)) {%>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%=campground._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <!-- End of Edit adn Delete Button -->
    </div>
    <!-- End of Campground Details -->
  </div>
  <!-- End of left column -->

  <!-- Right Column: Review and Maps -->
  <div class="col-6">
    <!-- Camp Location Map -->
    <div id="map"></div>

    <!-- Review Section -->
    <% if(currentUser) { %>
    <h2>Leave a Review</h2>
    <!-- Review Form -->
    <form
      action="/campgrounds/<%=campground._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <!-- Stars for review -->
      <div class="mb-3">
        <fieldset class="starability-basic">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <!-- End Stars for review -->

      <!-- Entry for review -->
      <div class="mb-3">
        <label class="form-label" for="body">Review Text:</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <!-- End Entry for review -->

      <!-- Submit review button -->
      <button class="btn btn-success">Submit</button>
    </form>
    <!-- End of Review Form -->

    <!-- Renders list of reviews -->
    <% } %> <% for(let review of campground.reviews) {%>
    <div class="card mb-3">
      <div class="card-body">
        <!-- Review Author  -->
        <h5 class="card-title"><%=review.author.username%></h5>

        <!-- Review Rating -->
        <p class="starability-result" data-rating="<%=review.rating%>">
          Rated: <%=review.rating%> Stars
        </p>

        <!-- Review Description -->
        <p class="card-text">Review: <%=review.body%></p>

        <!-- Delete Review Button -->
        <% if(currentUser && review.author.equals(currentUser._id)) { %>
        <form
          action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
        <!-- End of Delete Review Button -->
      </div>
    </div>
    <% } %>
    <!-- End of Renders list of reviews -->
    <!-- End of Review Section -->
  </div>
  <!-- End of Right Column -->
</div>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campground = <%- JSON.stringify(campground) %>
</script>

<script src="/javascripts/showPageMap.js"></script>
