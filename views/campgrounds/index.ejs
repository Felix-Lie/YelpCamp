<!-- shows all camps as a list of hyperlinks to each camp-->
<% layout('layouts/boilerplate') %>

<!-- Maps all the available campgrounds in the map -->
<div id="cluster-map"></div>
<!-- End of map -->

<!-- Title -->
<h1>All Campgrounds</h1>
<!-- End of Title -->

<div>
  <a href="/campgrounds/new">Add Campground</a>
</div>

<!-- Renders Each Campground Listings -->
<% for (let campground of campgrounds) { %>
<div class="card mb-3">
  <div class="row">

    <!-- Campground Image -->
    <div class="col-md-4">
        <% if(campground.images.length) {%>
          <img class="img-fluid" alt="" src="<%=campground.images[0].url%>" />
        <% } else { %>
          <img  class="img-fluid" src="https://res.cloudinary.com/felixlie/image/upload/v1648594735/YelpCamp/iihrvbuvrqwod7f7vtwo.jpg" alt="">
        <% } %>
    </div>
    <!-- End of Campground Image -->
    
    <!-- Campground Details -->
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=campground.title%></h5>
        <p class="card-text"><%=campground.description%></p>
      </div>
        <p class="card-text"><small class="text-muted"><%=campground.location%></small></p>
        <a class="btn btn-primary" href="campgrounds/<%=campground._id%>">View <%=campground.title%></a>
      </div>
    </div>
    <!-- End of Campground Details -->
  </div>
</div>
<%}%>
<!-- End of Campground Listings -->

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campgrounds = {features: <%- JSON.stringify(campgrounds)%>}
</script>

<!-- Source tro Cluster Map file -->
<script src="/javascripts/clusterMap.js"></script>